{
  "manifest_version": 3,
  "name": "Ozon商品图片处理助手",
  "version": "1.0.0",
  "description": "在Ozon商品页面一键提取图片和描述，发送到AI处理系统",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://www.ozon.ru/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.ozon.ru/product/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
